[gerrit]
        basePath = <%= @envbase %>/git
<% if @envhost == "precise32" %>
        canonicalWebUrl = http://<%=@privateIp %>:<%= @port %>/<%= @envid %>
<% else %>
        canonicalWebUrl = http://<%= @envhost %>/<%= @envid %>
<% end %>
[database]
        type = H2
        database = db/ReviewDB
[auth]
        type = <%= @authtype %>
[sendemail]
        smtpServer = localhost
[container]
        #user = tools
        javaHome = /usr/lib/jvm/java-7-openjdk-i386/jre
        heapLimit = 128m
[sshd]
        listenAddress = *:<%= @sshport %>
[httpd]
        listenUrl = proxy-http://*:<%= @port %>/<%= @envid %>
[cache]
        directory = cache

[commentlink "changeid"]
  match = (I[0-9a-f]{8,40})
  link = "#q,$1,n,z"

[mimetype "image/png"]
  safe = true

[mimetype "image/gif"]
  safe = false
